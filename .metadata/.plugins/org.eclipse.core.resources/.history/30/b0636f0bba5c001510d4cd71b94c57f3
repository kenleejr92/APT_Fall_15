import java.net.*;
import java.io.*;
import java.util.*;

public class Server {

	/**
	 * @param args
	 */
	public static InetAddress loopBackAddress;
	public static ServerSocket a;
	public static Socket b,c;
	public static void main(String[] args) {
		try{
			loopBackAddress = InetAddress.getLoopbackAddress();
			System.out.println(loopBackAddress);
			
			a = new ServerSocket(1600);
			b = new Socket(loopBackAddress, 1600);
			System.out.println(a.getLocalPort());
			System.out.println(a.getInetAddress());
			a.close();
			b.close();
			
		} catch(UnknownHostException e){
			System.err.println(e);
		} catch (IOException e) {
			System.err.println(e);
		}

	}

}


