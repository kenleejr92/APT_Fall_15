import java.net.*;
import java.io.*;
import java.util.*;

public class Server {

	/**
	 * @param args
	 */
	public static InetAddress loopBackAddress;
	public static ServerSocket a;
	public static Socket b,c;
	public static void main(String[] args) {
		try{
			loopBackAddress = InetAddress.getLoopbackAddress();
			a = new ServerSocket(1600);
			b = new Socket(loopBackAddress, 1600);
			System.out.println(b.getLocalAddress());
			System.out.println(b.getLocalPort());
			c = a.accept();
			System.out.println(c.getLocalAddress());
			System.out.println(c.getLocalPort());
			BufferedReader in1 = new BufferedReader(new InputStreamReader(b.getInputStream()));
			PrintWriter out1 = new PrintWriter(b.getOutputStream());
			BufferedReader in2 = new BufferedReader(new InputStreamReader(c.getInputStream()));
			PrintWriter out2 = new PrintWriter(c.getOutputStream());
			out1.println("Hello World");
			System.out.println(in2.readLine());
			a.close();
			b.close();
			
		} catch(UnknownHostException e){
			System.err.println(e);
		} catch (IOException e) {
			System.err.println(e);
		}

	}

}


